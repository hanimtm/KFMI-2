    <template id="report_request_for_payment_document">
        <t t-call="amcl_payment_request.rfp_custom_external_layout">
            <div style="width:100%;">
                <center>
                    <div class="col-8 border-bottom border-dark" style="width:100%">
                        <strong>Department / قسم، أقسام</strong>
                    </div>
                    <div class="col-8 border-bottom border-dark mt-2" style="width:100%">
                        Purchasing / شراء
                        <br/>
                        <strong>Payment Request No. / رقم طلب الدفع</strong>
                    </div>
                    <div class="col-8 border-bottom border-dark mt-2" style="width:100%">
                        <t t-if="o.lpo_num">
                            <t t-esc="o.lpo_num.name"/>
                        </t>
                        <t t-else="">
                            <t t-esc="o.reference"/>
                        </t>
                        <br/>
                        <strong>Date / تاريخ</strong>
                    </div>
                    <div class="col-8 mt-2" style="width:100%">
                        <t t-esc="o.create_date.date()"/>
                    </div>
                </center>
            </div>
            <div class="row mt-2">
                <div class="col-6">
                    <strong>Please approve the payment detailed as follows :</strong>
                </div>
                <div class="col-6 text-right">
                    <strong>الرجاء الموافقة على الدفع المفصل على النحو التالي</strong>
                </div>
            </div>
            <table class="table table-sm o_main_table table-bordered" style="border: 1px solid black;margin-top:20px;">
                <thead>
                    <tr>
                        <th style="border: 1px solid black;width:15%;" name="th_amount_in_world" class="text-center">
                            Amount in Words / المبلغ بالكلمات
                        </th>
                        <th style="border: 1px solid black;width:15%;" name="th_amount_in_figures" class="text-center">
                            Amount in Figures / المبلغ بالأرقام
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="border: 1px solid black;" class="text-center">
                            <t t-esc="o.get_num2words(o.amount)"/>
                        </td>
                        <td style="border: 1px solid black;" class="text-center">
                            <t t-esc="o.amount"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <center>
                <table class="table table-sm o_main_table table-bordered" style="border: 1px solid black;margin-top:20px;width:80%">
                    <thead>
                        <tr>
                            <th style="border: 1px solid black;width:15%;" name="th_amount_in_world" class="text-center">
                                Currency / عملة
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="border: 1px solid black;" class="text-center">
                                <t t-esc="o.currency_id.name"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </center>

            <center>
                <table class="table table-sm o_main_table table-bordered" style="border: 1px solid black;margin-top:20px;width:80%">
                    <thead>
                        <tr>
                            <th style="border: 1px solid black;width:15%;" name="th_amount_in_world" class="text-center">
                                Method of Payment / طريقة الدفع
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="border: 1px solid black;" class="text-center">
                                <t t-esc="o.method_of_payment"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </center>

            <table class="table table-sm o_main_table table-bordered" style="border: 1px solid black;margin-top:20px;width:100%">
                <thead>
                    <tr>
                        <th style="border: 1px solid black;width:15%;" name="th_amount_in_world" class="text-center">
                            In The Order of / في ترتيب
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="border: 1px solid black;" class="text-center">
                            <t t-if="o.lpo_num">
                                <t t-esc="o.lpo_num.partner_id.name"/>
                            </t>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table class="table table-sm o_main_table table-bordered" style="border: 1px solid black;margin-top:20px;width:100%">
                <thead>
                    <tr>
                        <th colspan="2" style="border: 1px solid black;width:15%;" name="th_amount_in_world" class="text-center">
                            Reason for The Payment / سبب الدفع
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="border: 1px solid black;width:70%"/>
                        <td style="border: 1px solid black;" class="text-center">
                            Proforma Invoice No:
                        </td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;width:70%">
                            <t t-esc="o.reason"/>
                        </td>
                        <td style="border: 1px solid black;" class="text-center">
                            <t t-if="o.lpo_num and o.lpo_num.invoice_ids">
                                <t t-esc="o.lpo_num.invoice_ids[0].number"/>
                            </t>
                        </td>
                    </tr>
                </tbody>
            </table>

<!--            <div style="width:100%;">-->
<!--                <div style="width:25%;float:left;">-->
<!--&lt;!&ndash;                    <span class="text-center">Approval of the GM</span><br/>&ndash;&gt;-->
