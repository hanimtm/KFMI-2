<!--                </div>-->
<!--                <div style="width:25%;float:left;">-->
<!--&lt;!&ndash;                    <span class="text-center">Prepared By</span><br/>&ndash;&gt;-->
<!--                    <span class="text-center"></span>-->
<!--                </div>-->
<!--            </div>-->

            <table class="table table-sm o_main_table mt-5" style="width:100%">
                <thead>
                    <tr>
                        <th style="width:25%;" class="text-center border-0  border-bottom border-dark">
                            <span>موافقة المدير العام</span><br/>
                            Approval of the GM
                        </th>
                        <th style="width:25%;" class="text-center border-0  border-bottom border-dark">
                            <span>تدقيق محاسب</span><br/>
                            Accountant Audit
                        </th>
                        <th style="width:25%;" class="text-center border-0 border-bottom border-dark">
                            <span>معتمد من قبل مدير الدائرة</span><br/>
                            Approved By Dept. Manager
                        </th>
                        <th style="width:25%;" class="text-center border-0 border-bottom border-dark">
                            <span>أعدت بواسطة</span><br/>
                            Prepared By
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="border: 1px solid black;" class="text-center pt-3 pb-3">
                        </td>
                        <td style="border: 1px solid black;" class="text-center pt-3 pb-3">
                        </td>
                        <td style="border: 1px solid black;" class="text-center pt-3 pb-3">
                        </td>
                        <td style="border: 1px solid black;" class="text-center pt-3 pb-3">
                        </td>
                    </tr>
                </tbody>
            </table>

        </t>
    </template>

    <template id="report_request_for_payment">
        <t t-call="web.html_container">
